// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  lastName          String
  email             String     @unique
  password          String
  bio               String?
  currentAddress    String?
  highestEducation  String?
  currentProfession String?
  interests         Interest[]
  age               Int?
  role              Role       @default(USER)
}

model Token {
  token String  @id @map("_id")
  used  Boolean @default(false)
}

enum Role {
  USER
  ADMIN
}

enum Interest {
  travel
  sports
  reading
  music
  movies
  cooking
  art
  photography
  outdoor
  hiking
  gaming
  fashion
  dancing
  technology
  food
  volunteer
  pets
  yoga
  writing
  gardening
}
