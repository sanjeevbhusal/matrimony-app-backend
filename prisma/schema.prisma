// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  lastName          String
  email             String     @unique
  password          String
  bio               String?
  Address           String?
  HighestEducation  String?
  CurrentProfession String?
  interests         Interest[]
  age               Int?
  role              Role       @default(USER)
}

enum Role {
  USER
  ADMIN
}

enum Interest {
  TRAVEL
  SPORTS
  READING
  MUSIC
  MOVIES
  COOKING
  ART
  PHOTOGRAPHY
  OUTDOOR
  HIKING
  GAMING
  FASHION
  DANCING
  TECHNOLOGY
  FOOD
  VOLUNTEER
  PETS
  YOGA
  WRITING
  GARDENING
}
